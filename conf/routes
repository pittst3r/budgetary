# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET     /budgets                    controllers.Budgets.index
GET     /budgets/new                controllers.Budgets.newBudget
POST    /budgets/create             controllers.Budgets.createBudget
GET     /budgets/:id/edit           controllers.Budgets.editBudget(id: Long)
PUT     /budgets/:id                controllers.Budgets.updateBudget(id: Long)
DELETE  /budgets/:id/destroy        controllers.Budgets.destroyBudget(id: Long)
